<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".MainActivity">


    <LinearLayout
            android:id="@+id/profile_guest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_guest"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_guest"
                android:textSize="25dp"/>
    </LinearLayout>
    <ListView
            android:id="@+id/select_device_list"
            android:layout_width="427dp"
            android:layout_height="554dp"
            tools:ignore="MissingConstraints,Suspicious0dp"
            tools:layout_editor_absoluteX="-8dp"
            android:transcriptMode="alwaysScroll"
            app:layout_constraintBottom_toTopOf="@+id/send_msj" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/profile_guest" app:layout_constraintVertical_bias="1.0"/>


    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/send_msj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="0dp"
            android:layout_gravity="bottom">

        <EditText
                android:id="@+id/et_new_msj"
                android:layout_width="314dp"
                android:layout_height="46dp"
                android:hint="Message"
                tools:ignore="MissingConstraints" tools:layout_editor_absoluteY="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_send_msj"/>

        <Button
                android:id="@+id/btn_send_msj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Send"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>



</LinearLayout>